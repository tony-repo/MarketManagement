<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="./internal-nlog.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
	<targets>
		<target name="targetWrapper" xsi:type="AsyncWrapper">
			<target xsi:type="Console"
			        name="console"
			        detectConsoleAvailable="false">
				<layout xsi:type="JsonLayout" includeAllProperties="true" includeMdlc="true">
					<attribute name="time" layout="${date:universalTime=true:format=yyyy-MM-dd HH\:mm\:ss.fff}" />
					<attribute name="machineName" layout="${machineName}" />
					<attribute name="threadId" layout="${threadid}" />
					<attribute name="threadName" layout="${threadname}" />
					<attribute name="logger" layout="${logger}" />
					<attribute name="level" layout="${level:upperCase=true}" />
					<attribute name="ndc" layout="${ndc}" />
					<attribute name="message" layout="${message}" />
					<attribute name="aspnetRequestUrl" layout="${aspnet-request-url}" />
					<attribute name="aspnetMvcAction" layout="${aspnet-mvc-action}" />
					<attribute name="exception" layout="${exception:format=toString,Data}" />
					<attribute name="environment" layout="${environment:Environment}" />
					<attribute name="aspnetcore_environment" layout="${environment:ASPNETCORE_ENVIRONMENT}" />
				</layout>
			</target>
		</target>
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!--Skip non-critical Microsoft logs and so log only own logs-->
		<logger name="Microsoft.*" maxlevel="Info" final="true" />

		<!--All logs, including from Microsoft-->
		<logger name="*" minlevel="Trace" writeTo="targetWrapper" />
	</rules>
</nlog>